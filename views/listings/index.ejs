      ];
    %>
    
    <% categories.forEach(cat => { %>
      <div class="filter">
        <a href="/listings?category=<%= cat.name %>">
          <div><img src="<%= cat.img %>" style="height: 25px;"></div>
          <p class="<%= category === cat.name ? 'active' : '' %>"><%= cat.name %></p>
        </a>
      </div>
    <% }) %>
       <div class="tax-toggle mt-3 shadow-sm">
        <div class="form-check form-switch d-flex align-items-center gap-3 px-3 py-2">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label fw-semibold" for="flexSwitchCheckDefault">Display Total after taxes</label>
        </div>
      </div>      
    </div>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 mt-3">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div 
            class="card listing-card col" 
            data-title="<%= listing.title ? listing.title.toLowerCase() : '' %>" 
            data-location="<%= listing.location ? listing.location.toLowerCase() : '' %>" 
            data-description="<%= listing.description ? listing.description.toLowerCase() : '' %>" 
            data-category="<%= listing.category ? listing.category.toLowerCase() : '' %>"

          >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                <i class="tax-info">&nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
</body>

<script>
  let taxSwitch=document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",() =>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  })

  // âœ… Live search filter
  const liveSearchInput = document.getElementById("liveSearchInput");

  liveSearchInput.addEventListener("input", () => {
    const searchTerm = liveSearchInput.value.toLowerCase();
    const cards = document.querySelectorAll(".listing-card");

    cards.forEach(card => {
      const title = card.dataset.title;
      const location = card.dataset.location;
      const description = card.dataset.description;
      const category = card.dataset.category;

      const matches = [title, location, description, category].some(field =>
        field.includes(searchTerm)
      );

      card.parentElement.style.display = matches ? "block" : "none";
    });
  });
</script>