<% layout("/layouts/boilerplate") %>
<body>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    #filters {
      display: flex;
      flex-wrap: wrap;
      justify-content: start;
      padding: 1rem 2rem;
      background: linear-gradient(to right, #ffffff, #f2f2f2);
      border-bottom: 1px solid #ddd;
    }

    .filter {
      text-align: center;
      margin: 0.5rem 1rem;
      opacity: 0.7;
      transition: all 0.3s ease-in-out;
      padding: 0.3rem 0.5rem;
      border-radius: 10px;
    }

    .filter:hover {
      opacity: 1;
      background-color: #eeeeee;
      transform: scale(1.05);
      cursor: pointer;
    }

    .filter img {
      height: 30px;
      border-radius: 5px;
    }

    .filter p {
      font-size: 13px;
      margin-top: 5px;
    }

    .tax-info {
      display: none;
      font-size: 12px;
      color: #555;
    }

    .tax-toggle {
      margin-top: 1rem;
      margin-left: auto;
      margin-right: 1.5rem;
      background-color: #ffffff;
      border: 1px solid #ddd;
      border-radius: 1rem;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 3rem;
      padding: 0.5rem 1rem;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.05);
    }

    .listing-link {
      text-decoration: none;
      color: inherit;
    }

    .listing-card {
      margin: 1rem;
      border: none;
      border-radius: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease-in-out;
    }

    .listing-card:hover {
      transform: translateY(-5px);
    }

    .card-img-top {
      object-fit: cover;
      border-bottom: 1px solid #eee;
    }

    .card-body {
      padding: 1rem;
    }

    .card-text {
      font-size: 14px;
      color: #333;
    }

    .card-text b {
      display: block;
      font-size: 16px;
      margin-bottom: 0.4rem;
    }

    /* Toggle styling */
    .form-check-input {
      width: 2rem;
      height: 1rem;
      background-color: #ccc;
      border-radius: 1rem;
      position: relative;
      transition: background-color 0.3s ease;
    }

    .form-check-input:checked {
      background-color: #4caf50;
    }

    .form-check-input:checked::before {
      transform: translateX(1rem);
    }

    .form-check-input::before {
      content: "";
      position: absolute;
      top: 0.1rem;
      left: 0.1rem;
      width: 0.8rem;
      height: 0.8rem;
      background-color: white;
      border-radius: 50%;
      transition: transform 0.3s ease;
    }

    .form-check-label {
      font-size: 14px;
      margin-left: 0.6rem;
      color: #333;
    }
  </style>

  <div id="filters">
    <!-- Your filter buttons here (same as original, unchanged for brevity) -->
    <!-- Copy your existing filter divs here -->
    <div class="filter">
      <div>
        <img src="https://a0.muscache.com/im/pictures/mediaverse/category_icon/original/3e5243c8-4d15-4c6b-97e3-7ba2bb7bb880.png">
      </div>
      <p>Icons</p>
    </div>
    <!-- ... other filters -->
    <div class="tax-toggle mt-3">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 mt-3">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card col">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="tax-info">&nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = (info.style.display != "inline") ? "inline" : "none";
      }
    });
  </script>
</body>
