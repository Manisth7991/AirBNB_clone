<% layout("/layouts/boilerplate") %>
<body>
    <style>
      #filters {
        display: flex;
        overflow-x: auto;
        scrollbar-width: none;
        -ms-overflow-style: none;
        scroll-behavior: smooth;
        gap: 1rem;
        padding: 0 2rem;
        flex-wrap: nowrap;  
        margin-bottom: 60px; 
        position: sticky;
        top: 5rem; 
        background-color: #fff; 
        z-index: 1000; 
      }

      #filters::-webkit-scrollbar {
        display: none; /* Hide the scrollbar */
      }

      .tax-toggle {
        position: fixed; 
        top: 4.5rem; 
        right: 2rem; 
        background-color: #ffffff;
        border-radius: 1.7rem;
        border: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.2rem 2rem;
        transition: box-shadow 0.3s ease;
        width: 250px;
        white-space: nowrap;
        text-align: center;
        box-sizing: border-box;
        z-index: 1050; /* Ensure it's above the filters */
      }

      .tax-toggle:hover {
        box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
      }

      .navbar {
        z-index: 1000; /* Lower z-index value for the navbar */
      }


      .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
      }

      .form-check-input:focus {
        box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
      }


      /* Remove underline and change color */
      .filter a {
          text-decoration: none; 
          color: inherit; 
      }
      .active {
        font-weight: bold;
        border-bottom: 2px solid black;
      }

      /* Change color on hover */
      .filter a:hover {
          opacity: 1; 
      }

      .filter{
        text-align: center;
        margin-left: 1.5rem;
        margin-top: 1rem;
        opacity: .7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p{
        font-size:12px;
      }
      .tax-info{
        display: none;
      }
    </style>
    <div id="filters">
      
